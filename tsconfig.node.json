{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "types": ["node"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,

    /* Emisi√≥n requerida por composite */
    "noEmit": false,
    "emitDeclarationOnly": true,

    /* Linting */
    "strict": true
  },
  "include": ["vite.config.ts", "server"]
}
